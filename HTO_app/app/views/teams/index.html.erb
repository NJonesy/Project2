<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<%= form_tag( teams_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q, params[:q]) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Post code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.username %></td>
        <td><%= team.first_name %></td>
        <td><%= team.last_name  %></td>
        <td><%= team.post_code %></td>
        <td><%= image_tag team.team_images.url, size: "130x80" %></td>
        <td><%= link_to 'Show', team %></td>
      </tr>
    <% end %>
  </tbody>
</table>
