<!DOCTYPE html>
<html>
<head>
  <title>HTOApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<header>
  <nav>
    <ul>
      <li><%= link_to "Teams", teams_path %></li>
      <li><%= link_to "Sign In", team_session_path %></li>
      <li><%= link_to "Sign Up", new_team_registration_path %></li>
    </ul>
  </nav>
</header>

<body>

<% flash.each do |name, message| %>
  <div class="flash-message flash-message-<%= name %>">
    <%= message %>
  </div>
<% end %>

<div class='login'>
  <% if current_team %>
     <%= current_team.email %>
     <%= link_to "Log out", destroy_team_session_path, method: :delete %>
  <% else %>
     <%= link_to "Sign In", new_team_session_path %>
     <%= link_to "Register", new_team_registration_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
