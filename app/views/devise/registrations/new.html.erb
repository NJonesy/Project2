<!DOCTYPE html>
<html lang="en">

<body>

  <h2>Welcome to Half time Oranges</h2>

  <div class="row">
    <div class="medium-8 medium-offset-2 columns">
      <h3>Sign up your team</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="medium-8 medium-offset-2 columns">
      <div class="row">
        <div class="field large-6 columns">
          <%= f.text_field :username, :placeholder => "Team name" %>
        </div>
      </div>
      <div class="row">
        <div class="field large-6 columns">
          <%= f.text_field :first_name, :placeholder => "First name" %>
        </div>
      </div>
      <div class="row">
        <div class="field large-6 columns">
          <%= f.text_field :last_name, :placeholder => "Last name" %>
        </div>
      </div>
      <div class="row">
        <div class="field large-6 columns">
          <%= f.text_field :post_code, :placeholder => "Postcode" %>
        </div>
      </div>
      <div class="row">
        <div class="field large-6 columns">
          <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="field large-6 columns">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
        </div>
      </div>
      <div class="row">
        <div class="field large-6 columns">
          <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", autocomplete: "off" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="medium-8 medium-offset-2 columns">
      <div class="field">
        <%= f.file_field :team_images %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-8 medium-offset-2 columns">
    <div class="actions small-2 columns">
      <%= submit_tag("Sign up", class: "button postfix") %>
    </div>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</body>
</html>
